{
	"name": "Provus",
	"private": true,
	"version": "0.0.1",
	"description": "Provus Quoting",
	"scripts": {
		"build": "rm -r -f force-app/main/default/staticresources/Provus && npm run compile",
		"compile": "webpack --config webpack.config.quotegrid.js --stats-children",
		"deploy": "npm run compile; sfdx force:source:deploy -p force-app",
		"deleteSLDSBackup": "rm -r -f node_modules/\\@salesforce-ux/design-system/assets/styles/salesforce-lightning-design-system.css.bak",
		"fixSLDSPaths": "sed -i'.bak' 's|\"/assets|\"../../assets|g' node_modules/\\@salesforce-ux/design-system/assets/styles/salesforce-lightning-design-system.css",
		"lint": "npm run lint:lwc && npm run lint:aura && npm run lint:ui && npm run lint:src",
		"lint-staged": "lint-staged",
		"lint:aura": "eslint **/aura/**/*.js",
		"lint:aura:fix": "prettier --no-error-on-unmatched-pattern --write **/aura; eslint **/aura/**/*.js --fix",
		"lint:fix": "npm run lint:lwc:fix & npm run lint:aura:fix & npm run lint:ui:fix & npm run lint:src:fix",
		"lint:lwc": "eslint **/lwc/**/*.js",
		"lint:lwc:fix": "prettier --no-error-on-unmatched-pattern --write **/lwc/** ; eslint **/lwc/**/*.js --fix",
		"lint:src": "prettier --no-error-on-unmatched-pattern --check **/default**/\\!\\(staticresources\\)/**/*.{cls,css,cmp,component,html,json,md,page,trigger,xml,yaml,yml}",
		"lint:src:fix": "prettier --no-error-on-unmatched-pattern --write --no-error-on-unmatched-pattern **/default**/\\!\\(staticresources\\)/**/*.{cls,css,cmp,component,html,json,md,page,trigger,xml,yaml,yml}",
		"lint:ui": "eslint ui/**/**/*.ts && prettier --no-error-on-unmatched-pattern --check ui/**/**/*.css",
		"lint:ui:fix": "prettier --no-error-on-unmatched-pattern --write ui/**/**/*.css; eslint ui/**/**/*.ts --fix",
		"postinstall": "npm run fixSLDSPaths && npm run deleteSLDSBackup",
		"prepare": "is-ci || husky install",
		"tests": "npm run test:ui npm run test:lwc",
		"test:ui": "jest --config ui/jest.config.js --colors --passWithNoTests --coverage .*/ui/.*\\.test\\.ts",
		"test:lwc": "sfdx-lwc-jest -- --passWithNoTests --colors --coverage",
		"test:functional:ci": "cd tests; cypress run -b chromium",
		"test:functional": "cd tests; cypress run -b chrome",
		"test:functional:managed": "cd tests; cypress run --env namespacePrefix=PSQ -b chrome",
		"test:functional:live": "cd tests; cypress open -b chrome --e2e",
		"test:functional:managed:live": "cd tests; cypress open --env namespacePrefix=PSQ -b chrome --e2e"
	},
	"author": "Provus",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@cucumber/cucumber": "^8.0.0",
		"@lwc/eslint-plugin-lwc": "^1.0.1",
		"@prettier/plugin-xml": "^0.13.1",
		"@salesforce/eslint-config-lwc": "^2.0.0",
		"@salesforce/eslint-plugin-aura": "^2.0.0",
		"@salesforce/eslint-plugin-lightning": "^0.1.1",
		"@salesforce/sfdx-lwc-jest": "^0.13.0",
		"@salesforce/wire-service-jest-util": "^4.0.0",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/exec": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@slack/web-api": "^6.6.0",
		"@types/async": "^3.2.6",
		"@types/jest": "^25.2.3",
		"@types/lodash": "^4.14.168",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"css-loader": "~5.2.0",
		"eslint": "^7.0.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.13.2",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-testcafe": "^0.2.1",
		"file-loader": "^6.2.0",
		"fs-extra": "^10.0.0",
		"html-webpack-plugin": "^5.3.1",
		"husky": "^6.0.0",
		"is-ci": "^3.0.1",
		"jest": "^26.0.1",
		"jsforce": "^1.11.0",
		"lint-staged": "^11.0.0",
		"mini-css-extract-plugin": "^1.4.1",
		"prettier": "^2.5.1",
		"prettier-plugin-apex": "^1.9.1",
		"resolve": "^1.20.0",
		"sass-loader": "^11.1.0",
		"semantic-release": "^19.0.2",
		"sfdx-cli": "^7.110.0",
		"sfdx-node": "^3.2.0",
		"testcafe": "^1.18.1",
		"ts-jest": "~26.5.6",
		"ts-node": "^10.4.0",
		"webpack": "~5.33.2",
		"webpack-cli": "~4.6.0",
		"yargs": "^17.3.1"
	},
	"dependencies": {
		"@badeball/cypress-cucumber-preprocessor": "latest",
		"@cypress/webpack-preprocessor": "latest",
		"@nativedocuments/docx-wasm": "^2.2.13-1561490777",
		"@salesforce-ux/design-system": "^2.18.1",
		"async": "~3.2.4",
		"cypress": "latest",
		"cypress-screenplay": "^0.5.45",
		"deferred": "^0.7.11",
		"events": "^3.3.0",
		"fs": "^0.0.1-security",
		"handsontable": "~12.1.2",
		"hyperformula": "^2.0.1",
		"jsforce": "^1.11.0",
		"lodash": "^4.17.21",
		"path": "^0.12.7",
		"ts-loader": "latest",
		"typescript": "latest",
		"util": "^0.12.4",
		"uuid": "^8.3.2"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix",
			"jest --findRelatedTests --config ui/jest.config.js"
		],
		"**/default**/!(staticresources)/**/*.js": [
			"prettier --write",
			"eslint --fix",
			"sfdx-lwc-jest -- --findRelatedTests"
		],
		"*.cls": [
			"prettier --write"
		],
		"*.{cmp,css,component,html,json,md,page,trigger,xml,yaml,yml}": "prettier --write"
	}
}
